@using UniversitySystemMVC.Extensions;

@if (TempData.FlashExists())
{
    switch (TempData.GetFlashType())
    {
        case FlashMessageTypeEnum.Red:
            ViewBag.flashMessageClass = "alert-danger";
            break;
        case FlashMessageTypeEnum.Blue:
            ViewBag.flashMessageClass = "alert-default";
            break;
        case FlashMessageTypeEnum.Yellow:
            ViewBag.flashMessageClass = "alert-warning";
            break;
        case FlashMessageTypeEnum.Green:
            ViewBag.flashMessageClass = "alert-success";
            break;
        default:
            break;
    }

    <div class="alert alert-dismissible @ViewBag.flashMessageClass">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @if (!string.IsNullOrEmpty(TempData.GetFlashTitle()))
        {
            <h4>@TempData.GetFlashTitle()</h4>
        }
        @if (!string.IsNullOrEmpty(TempData.GetFlashMessage()))
        {
            <p>@TempData.GetFlashMessage()</p>
        }
    </div>

        TempData.ResetFlash();

}
