@model UniversitySystemMVC.ViewModels.TitlesVM.TitlesDetailsVM

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title.Name - Details</h2>

<p>@Model.Teachers.Count(t => t.IsActive) teachers</p>

<table class="table">
    <tr>
        <th>Teacher</th>
        <th>Subjects</th>
    </tr>

@foreach (var item in Model.Teachers) {
    <tr>
        <td>@Html.ActionLink(item.FirstName + " " + item.LastName, "Details", "Teacher", new { id = @item.Id }, new { target = "_blank" })</td>
        <td>
            @foreach (var cs in item.CourseSubjects)
            {
                <span>
                    @Html.ActionLink(@cs.Subject.Name, "Details", "Subject", new { id = cs.Subject.Id }, new { target = "_blank" }) -
                    @Html.ActionLink(@cs.Course.Name, "Details", "Course", new { id = cs.Course.Id }, new { target = "_blank" })
                </span><br />
            }
        </td>

    </tr>
}

</table>
